{
  "name": "prompt-for-user-input-mcp",
  "displayName": "Prompt For User Input MCP",
  "description": "Native input dialogs for MCP user prompts",
  "version": "0.1.0",
  "publisher": "prompt-for-user-input-mcp",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/example/prompt-for-user-input-mcp.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "promptForUserInputMcp.showInputDialog",
        "title": "Show Input Dialog"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run bundle",
    "compile": "tsc -p .",
    "watch": "tsc -watch -p ./",
    "bundle": "esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --minify",
    "bundle:watch": "esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --watch"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "22.x",
    "@types/express": "^5.0.0",
    "typescript": "^5.8.0",
    "esbuild": "^0.25.0"
  },
  "dependencies": {
    "express": "^5.1.0"
  }
} 